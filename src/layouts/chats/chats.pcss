@import './../../styles/variables.pcss';
.main{
  display: flex;
  flex-direction: row;
  height: 100%;
}
.main__sidebar{
  width: 55px;
  min-height: 170px;
  padding-top: 6px;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  position: sticky;
  top: 0;
  background: #d9d9d9;
}
.preferences{
  width: 51px;
}
.preferences__avatar{
  width: 43px;
  height: 43px;
  filter: var(--default-drop-shadow);
}
.preferences__description{
  text-align: center;
  color:  white;
  margin: 0;
  filter: var(--default-drop-shadow);
}
.create-new-chat{
  margin-top: 27px;
}
.create-new-chat__icon{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 37px;
  height: 37px;
  filter: var(--default-drop-shadow);
}

.main__navbar{
  max-width: 468px;
  width: auto;
  border-right: 2px solid var(--border-lines-color);
  flex-direction: column;
  flex: 3.6 1 468px;
  display: flex;
  overflow: scroll;
  overflow-x: hidden;
  height: 100vh;
}
.navbar__navbar-search{
  padding: 17px 15px 14px 15px;
}
.navbar-search__search-form{
  max-width: 436px;
  height: 32px;
  background: var(--circle-and-search-color);
  border-radius: var(--search-and-submit-brdr-rds);
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 5px 0 10px;
  display: flex;
}
.search-form__search-input{
  max-width: 401px;
  background: none;
  border: none;
  display: flex;
  flex-basis: 401px;
}
.search-form__submit{
  flex-shrink: 0;
  width: 20px;
  height: 20px;
  padding: 0;
  border: 0;
}

.chat-list__container{
  padding: 0 15px;
}
.main__messages{
  display: flex;
  flex: 6 1 757px;
  width: auto;
  justify-content: center;
  background: #f9f9f9;
}
.messages__none-chat-wrapper{
    height: 100vh;
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
}
.messages__none-chat{

  font-size: 12px;
  color: var(--gray-text-color);
}

.chat-list__chat, .chat__wrap1, .chat__wrap2, .chat__wrap3{
  display: flex;
}

.chat-list__chat{
  border-top: var(--border-lines);
  height: 72px;
  align-items: center;
  justify-content: space-between;
}
.ul a{
  background: black;
}
.chat-list__container:hover{
  background: var(--chat-hover-color);
}
.chat__wrap1, .chat__wrap2{
  flex-direction: column;
  justify-content: space-around;
}
.chat__wrap2{
  height: 47px;
  justify-content: space-between;
  padding: 4px 0px;
  flex-shrink: 0;
}
.chat__wrap3{
  justify-content: start;
}
.chat__name{
  font-weight: 600;/*var?*/
  color: var(--default-text-color);
}
.chat__last-message-time{
  font-size: 9px;
  text-align: right;
  color: var(--gray-text-color);
}

.chat__unread-messages-count{
  max-width: 48px;
  background: var(--light-blue-color);
  border-radius: var(--modals-and-unread-msgs-brdr-rds);
  padding: 3px 6px;
}
.chat__user-avatar{
  margin-left: -5px;
  margin-right: 10px;
}

.unread-messages-count__text{
  font-size: 11px;
  line-height: 12px;
  text-align: center;
  color: white;
}
.chat__last-message-wrap{
  max-width: 330px;
  display: flex;
}
.chat__last-message{
  font-size: 12px;
  line-height: 15px;
  color: var(--gray-text-color);

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 3 1 150px;
}
.chat__sender{
  color: var(--default-text-color);
}
